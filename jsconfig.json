{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      // 路径匹配
      "@/*": ["src/*"],
      "assets": ["src/assets/*"],
      "api": ["src/api/*"],
      "views": ["src/views/*"],
      "components": ["src/components/*"]
    }
  },
  "exclude": [
    // 排除某些文件
    "node_modules"
  ],
  "include": ["./src/**/*"] //自动引入Vue组件和普通Js模块
}
